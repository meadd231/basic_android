<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".community.ReadCommunity">

    <androidx.core.widget.NestedScrollView
        android:padding="10dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/read_written_title"
                android:layout_marginBottom="10dp"
                style="@style/CustomTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이런 책 읽었습니다" />

            <LinearLayout
                android:id="@+id/author_imfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borderline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/profile_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/read_written_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="글쓴이" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/clock_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@android:drawable/ic_menu_recent_history" />

                        <TextView
                            android:id="@+id/read_written_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간  |" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  조회수" />

                        <TextView
                            android:id="@+id/read_views_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/written_contents"
                android:layout_marginTop="10dp"
                style="@style/CustomTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="정말 좋았다. 아주 좋았다. 매우매우 좋았다."
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/written_image_contents"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/next_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="다음 이미지"/>

                <Button
                    android:id="@+id/stop_image_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="정지"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ad_banner"
                android:layout_margin="10dp"
                android:background="@drawable/borderline"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/team_nova_logo"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/team_nova_logo" />

                <ImageView
                    android:id="@+id/tesla_logo"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/tesla_logo" />

                <ImageView
                    android:id="@+id/apple_logo"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/apple_logo" />

                <ImageView
                    android:id="@+id/lol_logo"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/lol_logo" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/write_written_button"
                    android:text="글쓰기"
                    android:textColor="@color/white"
                    android:layout_marginRight="55dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/modify_written_button"
                    android:text="수정"
                    android:textColor="@color/white"
                    android:layout_marginRight="55dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/delete_written_button"
                    android:text="삭제"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/div2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/comment_title"
                style="@style/CustomTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical" >

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.bookmemoapp.custom.ClearEditText
                        android:id="@+id/write_comment_author"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borderline"
                        android:hint="작성자"
                        android:singleLine="true"
                        android:textSize="25sp" />

                    <com.example.bookmemoapp.custom.ClearEditText
                        android:id="@+id/write_comment_password"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borderline"
                        android:hint="비밀번호"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.bookmemoapp.custom.ClearEditText
                        android:id="@+id/input_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderline"
                        android:hint="댓글을 입력해주세요" />

                    <TextView
                        android:id="@+id/sendingBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/sending_image"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>