<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".papago.Papago">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/inputData"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="번역 할 내용" />

            <Button
                android:id="@+id/translate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="번역" />

            <EditText
                android:id="@+id/outputData"
                android:textSize="25sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/borderline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="번역 내용"/>

            <Button
                android:id="@+id/save_output"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:text="번역 내용 저장하기" />

            <LinearLayout
                android:id="@+id/target_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/present_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderline"
                    android:padding="5dp"
                    android:text="영어"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/target_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderline"
                    android:padding="5dp"
                    android:text="영어"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/target_ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderline"
                    android:padding="5dp"
                    android:text="중국어"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/target_jp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderline"
                    android:padding="5dp"
                    android:text="일본어"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>